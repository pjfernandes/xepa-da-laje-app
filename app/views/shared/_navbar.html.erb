<div class="navbar navbar-expand-sm navbar-light navbar-lewagon m-6 fixed-top">

  <div class="logo d-flex justify-content-between">
  <%= image_tag "logo2.png",size:57%>
    <div class="xepa text-left ml-2 mt-3 pb-2 d-flex align-items-center">
      <h2>Xepa da Laje</h2>

    </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item active">
         <%= link_to "Home", products_path, class: "nav-link" %>
      </li>
