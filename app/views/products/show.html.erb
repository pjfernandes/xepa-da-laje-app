<h1 class="text-center"><%= @product.name %> </h1>

<div class="card-product-show">
<img src="https://source.unsplash.com/R_fC9UYlWp4" alt="bricks">
  <div "card-product-infos-show ">
    <p>Unit price: <%=@product.unit_price%></p>
    <p>Quantity: <%=@product.quantity%></p>
    <p>Description: <%=@product.description%></p>
    <p>Seller: <%=@product.user.email%></p>
  </div>
</div>

<div class="text-center">
<%=link_to "Back", root_path%> |
<% if user_signed_in? %>
  <%=link_to "Buy!", product_orders_path(@product,current_user), method: :post%>
<% else %>
  <%=link_to "Sign in to buy!", new_user_session_path, class: "btn btn-success m-4"%>
<%end%>
</div>
