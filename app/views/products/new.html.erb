<div class="title text-center m-2"><h3>Add new product</h3></div>

<%# <div class="container-form d-flex justify-content-center text-center"> %>
  <div class="form-new-product">
    <%= simple_form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :unit_price %>
      <%= f.text_field :unit_price %>

      <%= f.label :quantity %>
      <%= f.text_field :quantity %>

      <%= f.label :description %>
      <%= f.text_field :description%>

      <%= f.submit %>
    <% end %>
    <a href=<%=root_path%> class="btn btn-dark text-center">Back</a>
  </div>
<%# </div> %>
