<div class="title text-center m-2"><h3>Sell your construction trash!</h3></div>

<div class="container-form d-flex justify-content-center text-center">
  <div class="form-new-product text-center">
    <%= simple_form_for(@product) do |f| %>

    <div class="form-group justify-content-center">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group justify-content-center">
      <%= f.label :unit_price %>
      <br>
      <%= f.text_field :unit_price %>
    </div>

    <div class="form-group justify-content-center">
      <%= f.label :quantity %>
      <br>
      <%= f.text_field :quantity %>
    </div>

    <div class="form-group justify-content-center">
      <%= f.label :description %>
      <br>
      <%= f.text_field :description%>
    </div>

    <div class="form-group justify-content-center">
      <%= f.input :photo, as: :file %>
    </div>

    <%= f.button :submit, "Sell product", class: "btn btn-success text-center" %>
   <% end %>
     <%=link_to "Back", :back, class: "btn btn-danger text-center mt-3"%>
  </div>
</div>
